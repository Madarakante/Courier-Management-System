<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rastreamento - Atlantic Shipping</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Montserrat', sans-serif;
        }
        .tracking-container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 20px;
        }
        .logo {
            max-width: 200px;
            margin-bottom: 30px;
        }
        .tracking-box {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 30px;
            margin-bottom: 20px;
        }
        .timeline {
            position: relative;
            padding: 20px 0;
        }
        .timeline-item {
            position: relative;
            padding-left: 45px;
            margin-bottom: 35px;
        }
        .timeline-marker {
            position: absolute;
            left: 0;
            top: 0;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            border: 3px solid white;
            box-shadow: 0 0 0 3px;
        }
        .timeline-item:not(:last-child):before {
            content: '';
            position: absolute;
            left: 9px;
            top: 25px;
            height: calc(100% + 10px);
            width: 2px;
            background-color: #e9ecef;
        }
        .package-card {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }
        .status-badge {
            font-size: 1rem;
            padding: 8px 16px;
        }
        .info-section {
            margin-bottom: 30px;
            padding: 20px;
            border-radius: 8px;
            background: #f8f9fa;
        }
        .info-section h5 {
            color: #1A1B3A;
            margin-bottom: 15px;
            font-weight: 600;
        }
        .info-row {
            display: flex;
            margin-bottom: 10px;
        }
        .info-label {
            font-weight: 500;
            color: #666;
            width: 150px;
        }
        .info-value {
            flex: 1;
        }
    </style>
</head>
<body>
    <div class="tracking-container">
        <div class="text-center">
            <img src="/logo.png" alt="Atlantic Shipping" class="logo">
        </div>

        <div class="tracking-box">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Informações do Envio</h1>
                <span class="badge bg-<%= getStatusBadgeClass(shipment.status) %> status-badge">
                    <%= formatStatus(shipment.status) %>
                </span>
            </div>

            <!-- Basic Info -->
            <div class="info-section">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Código:</span>
                            <span class="info-value"><%= shipment.trackingNumber %></span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Tipo:</span>
                            <span class="info-value"><%= formatStatus(shipment.shipmentType) %></span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Modo:</span>
                            <span class="info-value"><%= shipment.mode.toUpperCase() %></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Origem:</span>
                            <span class="info-value"><%= getCountryName(shipment.origin) %></span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Destino:</span>
                            <span class="info-value"><%= getCountryName(shipment.destination) %></span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Localização Atual:</span>
                            <span class="info-value"><%= shipment.currentLocation %></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Packages -->
            <div class="info-section">
                <h5>Detalhes dos Volumes</h5>
                <% if (shipment.packages && shipment.packages.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Tipo</th>
                                    <th>Quantidade</th>
                                    <th>Descrição</th>
                                    <th>Dimensões (cm)</th>
                                    <th>Peso (kg)</th>
                                    <th>Peso Vol. (kg)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% shipment.packages.forEach(pkg => { %>
                                    <tr>
                                        <td><%= formatStatus(pkg.pieceType) %></td>
                                        <td><%= pkg.quantity %></td>
                                        <td><%= pkg.description || 'N/A' %></td>
                                        <td><%= `${pkg.length} × ${pkg.width} × ${pkg.height}` %></td>
                                        <td><%= pkg.weight %></td>
                                        <td><%= pkg.volumetricWeight.toFixed(2) %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted">Informações dos volumes não disponíveis</p>
                <% } %>
            </div>

            <!-- Tracking History -->
            <div class="info-section">
                <h5>Histórico de Movimentação</h5>
                <div class="timeline">
                    <% if (shipment.history && shipment.history.length > 0) { %>
                        <% shipment.history.forEach(entry => { %>
                            <div class="timeline-item">
                                <div class="timeline-marker" style="color: var(--bs-<%= getStatusBadgeClass(entry.status) %>)"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1"><%= formatStatus(entry.status) %></h6>
                                    <p class="mb-1"><%= entry.location %></p>
                                    <% if (entry.notes) { %>
                                        <p class="text-muted mb-1"><%= entry.notes %></p>
                                    <% } %>
                                    <small class="text-muted">
                                        <%= formatDate(entry.createdAt) %>
                                        <% if (entry.updater) { %>
                                            por <%= entry.updater.name %>
                                        <% } %>
                                    </small>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p class="text-center text-muted">Nenhum histórico disponível</p>
                    <% } %>
                </div>
            </div>

            <!-- Back Button -->
            <div class="text-center mt-4">
                <a href="/tracking" class="btn btn-outline-primary">
                    <i class="fas fa-search me-2"></i>Rastrear Outro Envio
                </a>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-4">
            <p class="text-muted">
                Precisa de ajuda? Entre em contato:
                <a href="mailto:operations@atlanticshippings.com">operations@atlanticshippings.com</a>
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>