<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Shipment Details</h1>
        <div>
            <a href="/admin/tracking" class="btn btn-secondary me-2">
                <i class="fas fa-search me-2"></i>Track Another
            </a>
            <a href="/admin/shipments/<%= shipment.id %>" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit Shipment
            </a>
        </div>
    </div>

    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <% if (success && success.length > 0) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>

    <div class="row">
        <!-- Shipment Information -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Shipment Information</h6>
                    <span class="badge bg-<%= getStatusBadgeClass(shipment.status) %>">
                        <%= formatStatus(shipment.status) %>
                    </span>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Tracking Number</h6>
                            <p class="h5"><%= shipment.trackingNumber %></p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Current Location</h6>
                            <p><%= shipment.currentLocation %></p>
                            <small class="text-muted">Last updated: <%= formatDate(shipment.currentLocationUpdatedAt) %></small>
                        </div>
                    </div>

                    <!-- Shipper Information -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">Shipper Information</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Name:</strong> <%= shipment.shipperName %></p>
                                <p><strong>Email:</strong> <%= shipment.shipperEmail %></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Phone:</strong> <%= shipment.shipperPhone %></p>
                                <p><strong>Address:</strong> <%= shipment.shipperAddress %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Receiver Information -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">Receiver Information</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Name:</strong> <%= shipment.receiverName %></p>
                                <p><strong>Email:</strong> <%= shipment.receiverEmail %></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Phone:</strong> <%= shipment.receiverPhone %></p>
                                <p><strong>Address:</strong> <%= shipment.receiverAddress %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Shipment Details -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">Shipment Details</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Type:</strong> <%= formatStatus(shipment.shipmentType) %></p>
                                <p><strong>Mode:</strong> <%= shipment.mode.toUpperCase() %></p>
                                <p><strong>Origin:</strong> <%= shipment.origin %></p>
                                <p><strong>Destination:</strong> <%= shipment.destination %></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Carrier:</strong> <%= shipment.carrier || 'N/A' %></p>
                                <p><strong>Reference No:</strong> <%= shipment.carrierReferenceNo || 'N/A' %></p>
                                <p><strong>Payment Mode:</strong> <%= formatStatus(shipment.paymentMode) %></p>
                                <p><strong>Total Freight:</strong> <%= shipment.totalFreight ? `R$ ${shipment.totalFreight}` : 'N/A' %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Packages -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">Package Details</h6>
                        <% if (shipment.packages && shipment.packages.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Piece Type</th>
                                            <th>Quantity</th>
                                            <th>Description</th>
                                            <th>Dimensions (cm)</th>
                                            <th>Weight (kg)</th>
                                            <th>Vol. Weight (kg)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% shipment.packages.forEach(pkg => { %>
                                            <tr>
                                                <td><%= formatStatus(pkg.pieceType) %></td>
                                                <td><%= pkg.quantity %></td>
                                                <td><%= pkg.description || 'N/A' %></td>
                                                <td><%= `${pkg.length} × ${pkg.width} × ${pkg.height}` %></td>
                                                <td><%= pkg.weight %></td>
                                                <td><%= pkg.volumetricWeight.toFixed(2) %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-muted">No packages information available</p>
                        <% } %>
                    </div>

                    <% if (shipment.comments) { %>
                        <div class="mb-4">
                            <h6 class="text-muted">Comments</h6>
                            <p><%= shipment.comments %></p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Tracking History -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Tracking History</h6>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <% if (shipment.history && shipment.history.length > 0) { %>
                            <% shipment.history.forEach((entry, index) => { %>
                                <div class="timeline-item">
                                    <div class="timeline-marker" style="color: var(--bs-<%= getStatusBadgeClass(entry.status) %>)"></div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1"><%= formatStatus(entry.status) %></h6>
                                        <p class="mb-1"><%= entry.location %></p>
                                        <% if (entry.notes) { %>
                                            <p class="text-muted mb-1"><%= entry.notes %></p>
                                        <% } %>
                                        <small class="text-muted">
                                            <%= formatDate(entry.createdAt) %>
                                            by <%= entry.updater ? entry.updater.name : 'System' %>
                                        </small>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p class="text-center text-muted">No tracking history available</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding: 20px 0;
}
.timeline-item {
    position: relative;
    padding-left: 45px;
    margin-bottom: 35px;
}
.timeline-marker {
    position: absolute;
    left: 0;
    top: 0;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 3px solid white;
    box-shadow: 0 0 0 3px;
}
.timeline-item:not(:last-child):before {
    content: '';
    position: absolute;
    left: 9px;
    top: 25px;
    height: calc(100% + 10px);
    width: 2px;
    background-color: #e9ecef;
}
</style>
