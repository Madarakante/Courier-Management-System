<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Shipments</h1>
        <a href="/admin/shipments/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Shipment
        </a>
    </div>

    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <% if (success && success.length > 0) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tracking #</th>
                            <th>Shipper</th>
                            <th>Receiver</th>
                            <th>Type</th>
                            <th>Origin</th>
                            <th>Destination</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th style="width: 100px; min-width: 100px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% shipments.forEach(shipment => { %>
                            <tr>
                                <td><%= shipment.trackingNumber %></td>
                                <td>
                                    <%= shipment.shipperName %><br>
                                    <small class="text-muted"><%= shipment.shipperEmail %></small>
                                </td>
                                <td>
                                    <%= shipment.receiverName %><br>
                                    <small class="text-muted"><%= shipment.receiverEmail %></small>
                                </td>
                                <td>
                                    <%= formatStatus(shipment.shipmentType) %><br>
                                    <small class="text-muted"><%= shipment.mode.toUpperCase() %></small>
                                </td>
                                <td><%= shipment.origin %></td>
                                <td><%= shipment.destination %></td>
                                <td>
                                    <span class="badge bg-<%= getStatusBadgeClass(shipment.status) %>">
                                        <%= formatStatus(shipment.status) %>
                                    </span>
                                </td>
                                <td><%= formatDate(shipment.createdAt) %></td>
                                <td class="text-nowrap">
                                    <a href="/admin/shipments/<%= shipment.id %>" class="btn btn-sm btn-info me-1" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/admin/shipments/<%= shipment.id %>" class="btn btn-sm btn-primary" title="Update Status">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>